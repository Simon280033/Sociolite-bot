{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Sociolite discussion",
      "wrap": true,
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "The topic for your team to discuss:",
      "wrap": true,
      "color": "Accent"
    },
    {
      "type": "TextBlock",
      "text": "${$root.discussionTopic}",
      "wrap": true,
      "weight": "Bolder",
      "size": "ExtraLarge"
    }
  ]
}