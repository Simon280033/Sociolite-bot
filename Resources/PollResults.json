{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Results of last Sociolite Poll",
      "wrap": true,
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "${$root.pollTitle}",
      "wrap": true,
      "weight": "Bolder",
      "size": "ExtraLarge"
    },
    {
      "type": "TextBlock",
      "text": "Votes:",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${$root.answers}",
      "weight": "Bolder",
      "wrap": true
    }
  ]
}