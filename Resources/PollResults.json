{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Results of last Sociolite Poll",
      "wrap": true,
      "weight": "Bolder",
      "size": "ExtraLarge"
    },
    {
      "type": "Image",
      "url": "${$root.chartImage}",
      "size": "Large",
      "height": "200px",
      "width": "40777px"
    },
    {
      "type": "TextBlock",
      "text": "Question:",
      "wrap": true,
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${$root.pollTitle}",
      "wrap": true,
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "text": "Options and the people who voted for them:",
      "wrap": true,
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${$root.answers}",
      "weight": "Default",
      "wrap": true
    }
  ]
}